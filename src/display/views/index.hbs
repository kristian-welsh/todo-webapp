<div class="task-container">
	<!-- new task -->
	<!-- https://fontawesome.com/icons/plus-square?style=regular -->
	<div class="card">
		<div class="task-body">
			<h5 class="card-title">Create a task</h5>
			<form action="/task/create" method="POST">
				<input type="text" name="title" placeholder="task title here" />
				<br/>
				<input type="text" name="body" placeholder="task details here" />
				<br/>
				<input type="text" name="author" placeholder="my name" />
				<br/>
				<input type="submit" value="create" />
			</form>
		</div>
	</div>
	<!-- task list -->
	{{#each tasks}}
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">{{ this.title }}</h5>
			<p class="card-text">{{ this.body }}</p>
			<p class="card-text">Author: {{ this.author }}</p>
		</div>
	</div>
	{{/each}}
</div>
